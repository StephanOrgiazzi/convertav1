{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}