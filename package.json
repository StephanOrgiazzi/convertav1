{
    "name": "convertav1",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "CLI to convert a video to AV1 at ~50% of original size using ffmpeg/ffprobe (NVENC or libaom)",
    "author": "Stephan Orgiazzi",
    "scripts": {
        "start": "bun run src/convert_av1.ts",
        "build:win": "bun build --compile --target=bun-windows-x64 src/convert_av1.ts --outfile convert-av1-win.exe",
        "build:mac-x64": "bun build --compile --target=bun-darwin-x64 src/convert_av1.ts --outfile convert-av1-macos-x64",
        "build:mac-arm64": "bun build --compile --target=bun-darwin-arm64 src/convert_av1.ts --outfile convert-av1-macos-arm64",
        "icon:from-svg": "bun scripts/svg-to-ico.ts assets/icon.svg assets/icon.ico",
        "icon:win": "bun scripts/set-win-icon.ts convert-av1-win.exe assets/icon.ico",
        "shortcut:win": "bun scripts/create-win-shortcut.ts convert-av1-win.exe assets/icon.ico 'Convert AV1.lnk'",
        "bundle:win": "bun run icon:from-svg && bun run build:win && bun run shortcut:win",
        "icns:from-svg": "bun scripts/svg-to-icns.ts assets/icon.svg assets/icon.icns",
        "bundle:mac-x64": "bun scripts/macos-app.ts convert-av1-macos-x64 'Convert AV1' assets/icon.icns com.convertav1.app",
        "bundle:mac-arm64": "bun scripts/macos-app.ts convert-av1-macos-arm64 'Convert AV1' assets/icon.icns com.convertav1.app"
    },
    "packageManager": "bun@1.1.0",
    "engines": {
        "node": ">=18",
        "bun": ">=1.1.0"
    },
    "dependencies": {
        "ffmpeg-static": "^5.2.0",
        "ffprobe-static": "^3.1.0",
        "rcedit": "^3.0.1",
        "sharp": "^0.33.4",
        "to-ico": "^1.1.5",
        "png2icons": "^2.0.1"
    }
}